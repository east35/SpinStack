# Nginx reverse proxy configuration for Tailscale deployment
# Copy this to nginx-tailscale.conf for use with tailscaleproxy.yml

server {
    listen 80;
    server_name _;

    # Increase client body size for larger requests
    client_max_body_size 50M;

    # Frontend - serve Next.js app
    location / {
        proxy_pass http://spinstack-frontend:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # Backend API - proxy to Express backend
    location /api/ {
        proxy_pass http://spinstack-backend:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        proxy_cache_bypass $http_upgrade;

        # Preserve cookies for session management
        proxy_set_header Cookie $http_cookie;
        proxy_pass_header Set-Cookie;
    }

    # Auth callback route (redirect to /api/auth/callback on backend)
    location /auth/callback {
        proxy_pass http://spinstack-backend:3001/api/auth/callback;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        proxy_cache_bypass $http_upgrade;

        # Preserve cookies for session management
        proxy_set_header Cookie $http_cookie;
        proxy_pass_header Set-Cookie;
    }
}
